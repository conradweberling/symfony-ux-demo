{% extends 'layout/base.html.twig' %}

{% block body %}
    <div class="text-center pb-5">
        <div class="fs-3 fw-light text-muted">Autocomplete</div>
    </div>

    <turbo-frame id="review_form">

        {% if isSuccessful %}
            <div class="text-center">
                <span class="display-4 fw-bolder mb-5"><span class="text-gradient d-inline">Request successfully received.</span></span>
            </div>
        {% else %}
            {{ form(form, {attr: {'novalidate': true}}) }}
        {% endif %}

    </turbo-frame>
{% endblock %}